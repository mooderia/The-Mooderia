{
  "name": "mooderia-metropolis",
  "version": "6.2.0",
  "description": "A vibrant social and wellness platform",
  "main": "main.js",
  "scripts": {
    "start": "npx servor . index.html 8080 --reload",
    "build:win": "electron-builder --win",
    "cap:init": "cap init Mooderia com.mooderia.app",
    "cap:android": "cap add android && cap copy"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "@capacitor/cli": "^6.0.0"
  },
  "dependencies": {
    "@capacitor/core": "^6.0.0",
    "@capacitor/android": "^6.0.0"
  },
  "build": {
    "appId": "com.mooderia.app",
    "productName": "Mooderia Metropolis",
    "files": [
      "index.html",
      "index.tsx",
      "main.js",
      "sections/**/*",
      "components/**/*",
      "services/**/*",
      "types.ts",
      "constants.tsx",
      "metadata.json",
      "manifest.json"
    ],
    "win": {
      "target": "portable"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mooderia/The-Mooderia.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mooderia/The-Mooderia/issues"
  },
  "homepage": "https://github.com/mooderia/The-Mooderia#readme"
}
